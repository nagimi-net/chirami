{
  "name": "chirami",
  "version": "0.0.0",
  "description": "desktop application reader",
  "private": true,
  "devDependencies": {
    "@testing-library/jest-dom": "^5.11.5",
    "@testing-library/react": "^11.1.1",
    "@testing-library/user-event": "^12.2.0",
    "@types/jest": "^26.0.15",
    "@types/node": "^12.19.3",
    "@types/react": "^16.9.56",
    "@types/react-dom": "^16.9.9",
    "@typescript-eslint/eslint-plugin": "^4.6.1",
    "@typescript-eslint/parser": "^4.6.1",
    "cross-env": "^7.0.2",
    "electron": "^10.1.5",
    "electron-builder": "^22.9.1",
    "eslint": "^7.13.0",
    "eslint-plugin-react": "^7.21.5",
    "foreman": "^3.0.1",
    "nodemon": "^2.0.6",
    "react-scripts": "4.0.0",
    "ts-node": "^9.0.0",
    "typescript": "^4.0.5"
  },
  "dependencies": {
    "@types/classnames": "^2.2.11",
    "@types/lodash": "^4.14.165",
    "classnames": "^2.2.6",
    "lodash": "^4.17.20",
    "moment": "^2.29.1",
    "node-sass": "^4.14.1",
    "react": "^17.0.1",
    "react-dom": "^17.0.1",
    "web-vitals": "^0.2.4"
  },
  "main": "build/app/main.js",
  "homepage": "./",
  "scripts": {
    "lint": "eslint ./src --ext \".js,.jsx,.ts,.tsx\"",
    "lint:fix": "eslint ./src --ext \".js,.jsx,.ts,.tsx\" --fix",
    "electron-start": "ts-node --skip-project app/connect-electron.ts",
    "electron-watch": "tsc --watch --project app/tsconfig.json",
    "electron-build": "tsc --project app/tsconfig.json",
    "start": "nf start -p 3000",
    "react-start": "cross-env BROWSER=none react-scripts start",
    "react-build": "react-scripts build",
    "react-test": "react-scripts test",
    "eject": "react-scripts eject",
    "dist": "react-scripts build && npm run electron-build && electron-builder build -c.extraMetadata.main=build/app/main.js --publish=always",
    "postinstall": "install-app-deps"
  },
  "eslintConfig": {
    "extends": [
      "react-app",
      "react-app/jest"
    ]
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  },
  "build": {
    "productName": "Chirami",
    "appId": "net.nagimi.chirami",
    "win": {
      "target": [
        "portable"
      ]
    },
    "portable": {
      "artifactName": "chirami.exe"
    }
  }
}
